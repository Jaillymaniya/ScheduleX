@using Microsoft.AspNetCore.Components.Routing
@inject ScheduleX.Web.Services.AuthState Auth
@inject NavigationManager Nav

<div class="admin-sidebar">

    <div class="logo">
        <img src="images/logo.png" alt="ScheduleX Logo" />
    </div>

    <ul>
        <li><NavLink href="/admin/overview" Match="NavLinkMatch.All">Dashboard</NavLink></li>
        <li>
            <NavLink href="/admin/departments">
                Departments
            </NavLink>
        </li>
        <li><NavLink href="/admin/faculty">Faculty</NavLink></li>
        <li><NavLink href="/admin/rooms">Rooms</NavLink></li>
        <li><NavLink href="/admin/semesters">Semesters</NavLink></li>
        <li><NavLink href="/admin/timetable">Timetable Coordinator</NavLink></li>
    </ul>

    <div class="logout-section">
        <button class="logout-btn" @onclick="Logout">Logout</button>
    </div>

</div>



@code {
    void Logout()
    {
        Auth.SignOut();
        Nav.NavigateTo("/login", true);
    }
}