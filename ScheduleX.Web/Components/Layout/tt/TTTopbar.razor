@using Microsoft.AspNetCore.Components.Routing
@inject ScheduleX.Web.Services.AuthState Auth

@inject NavigationManager Nav

<div class="tt-topbar-inner">
    <div class="tt-topbar-left">
        <div class="tt-title">TT Coordinator Dashboard</div>
        <div class="tt-subtitle">Manage setup • configure • generate • export</div>
    </div>

    <div class="tt-topbar-center">
        <!-- Dummy badge for now (later we will load department+course from DB) -->
        <span class="tt-badge">Department: Computer</span>
        <span class="tt-badge">Course: BCA</span>
        <span class="tt-badge muted">Semester: 4</span>
    </div>

    <div class="tt-topbar-right">
        <button class="tt-btn ghost" @onclick="@(()=>Nav.NavigateTo("/tt/account/profile"))">Profile</button>
        <button class="tt-btn ghost" @onclick="@(()=>Nav.NavigateTo("/tt/account/change-password"))">Change Password</button>
        <button class="tt-btn danger" @onclick="Logout">Logout</button>
    </div>
</div>

@code {
    void Logout()
    {
        Auth.SignOut();
        Nav.NavigateTo("/login", replace: true);
    }
}