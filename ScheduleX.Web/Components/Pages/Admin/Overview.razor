@* @page "/" *@
@rendermode InteractiveServer
@page "/admin/overview"
@layout ScheduleX.Web.Components.Layout.Admin.AdminLayout
@inject ScheduleX.Web.Services.AuthState Auth
@inject NavigationManager Nav

<link href="css/admin-overview.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

<div class="overview-container">
    <div class="welcome-box">
        <h2>Welcome, Admin</h2>
        <p>Here's what's happening in your timetable system today</p>
    </div>

    <div class="stats-cards">
        <div class="stat-card">
            <p>TOTAL DEPARTMENTS</p>
            <h3>3</h3>
        </div>
        <div class="stat-card">
            <p>TOTAL FACULTY</p>
            <h3>25</h3>
        </div>
        <div class="stat-card">
            <p>TOTAL ROOMS</p>
            <h3>12</h3>
        </div>
    </div>

    
</div>

@code {
    protected override void OnInitialized()
    {
        if (!Auth.IsLoggedIn || !Auth.IsAdmin)
        {
            Nav.NavigateTo("/login", true);
        }
    }
}