<div class="tt-grid">
    <div class="tt-cell head"></div>
    <div class="tt-cell head">Mon</div>
    <div class="tt-cell head">Tue</div>
    <div class="tt-cell head">Wed</div>
    <div class="tt-cell head">Thu</div>
    <div class="tt-cell head">Fri</div>

    @foreach (var row in Rows)
    {
        <div class="tt-cell time">@row.Time</div>

        @foreach (var c in row.Cells)
        {
            <div class="tt-cell slot">
                <div class="slot-title">@c.Title</div>
                <div class="slot-sub">@c.Sub</div>
            </div>
        }
    }
</div>

